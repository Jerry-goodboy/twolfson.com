<div class="flexbox">
  <div class="flexbox__item width3">
    <a href="<%=pageUrl%>" target="_blank"><h3 title="<%=name%>" class="flush--bottom"><%= locals.truncatedName ? locals.truncatedName : name%></h3></a>
  </div>
  <div class="flexbox__item width7 project-description">
    <%- description%>
  </div>
  <div class="flexbox__item width1 hideLinks project-stars">
    <a href="<%=srcUrl%>" target="_blank" class="fakeLink"><span class="purpleStarIco" title="Starred">&nbsp;</span><span class="starCount"><%=numscale({value: stars, maxLen: 4}).toLowerCase() %></span></a>
  </div>
  <div class="flexbox__item width1 hideLinks project-forks">
    <a href="<%=srcUrl%>" target="_blank" class="fakeLink"><span class="purpleForkIco" title="Forks">&nbsp;</span><span class="forkCount"><%=forks%></span></a>
  </div>
</div>