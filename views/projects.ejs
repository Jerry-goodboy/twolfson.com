<section id="portfolioSection">
  <article>
    <div>
      <%
        var _rowCounter = 1;
        function getRowClass() {
          var klass = _rowCounter % 2 ? "odd-row" : "even-row";
          _rowCounter += 1;
          return klass;
        }
      %>
      <div>
        <h2 class="headerMega layout-center <%=getRowClass()%> theme">Scripts</h2>
      </div>
      <%
        scripts.forEach(function (item) {
      %>
      <div class="row superComfyText <%=getRowClass()%> theme">
        <%- partial('projects/script', item) %>
      </div>
      <%
        });
      %>
    </div>
    <div>
      <div>
        <h2 class="headerMega layout-center <%=getRowClass()%> theme">Competitions</h2>
      </div>
      <%
        var lenMinusOne = competitions.length - 1;
        competitions.forEach(function (item, i) {
          var isEven = i % 2 === 0,
              isLastItem = i === lenMinusOne,
              isOwnRow = isEven && isLastItem,
              isRowStart = isEven,
              isRowEnd = !isEven || isOwnRow,
              comfyRowKlass = isLastItem ? "" : "comfyRow",
              view = isOwnRow ? 'projects/competitionThin' : 'projects/competition';
      %>
        <% if (isRowStart) { %>
          <div class="row <%=comfyRowKlass%> <%=getRowClass()%> theme">
        <% } %>
            <%- partial(view, item) %>
        <% if (isRowEnd) { %>
          </div>
        <% } %>
      <%
        });
      %>
    </div>
    <div>
      <div>
        <h2 class="headerMega layout-center <%=getRowClass()%> theme">Contributions</h2>
      </div>
      <%
        contributions.forEach(function (item) {
      %>
      <div class="row <%=getRowClass()%> theme">
        <%- partial('projects/script', item) %>
      </div>
      <%
        });
      %>
    </div>
  </article>
</section>